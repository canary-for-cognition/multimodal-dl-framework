{
  "device": "cuda:0",
  "dataset_name": "alzheimer",
  "num_seeds": 10,
  "train": {
    "network_type": "rnn",
    "epochs": 100,
    "optimizer": "Adam",
    "criterion": "CrossEntropyLoss",
    "batch_size": 32,
    "learning_rate": 3e-5,
    "log_every": 1,
    "evaluate_every": 1,
    "early_stopping": {
      "patience": 50,
      "metrics": "auc",
      "metrics_trend": "increasing"
    }
  },
  "cv": {
    "k": 10,
    "down_sample_rate": -1,
    "use_cv_metadata": false
  }
}